@page
@model qwerty.Pages.Dolznosts.CreateModel

@{
    ViewData["Title"] = "Должность";
}

<h1>Добавить должность</h1>

<h4>Введите данные</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dolznost.Naimenovanie_dolznosti" class="control-label"></label>
                <input asp-for="Dolznost.Naimenovanie_dolznosti" class="form-control" />
                <span asp-validation-for="Dolznost.Naimenovanie_dolznosti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dolznost.Oklad" class="control-label"></label>
                <input asp-for="Dolznost.Oklad" class="form-control" />
                <span asp-validation-for="Dolznost.Oklad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dolznost.Obazannosty" class="control-label"></label>
                <input asp-for="Dolznost.Obazannosty" class="form-control" />
                <span asp-validation-for="Dolznost.Obazannosty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dolznost.Trebovania" class="control-label"></label>
                <input asp-for="Dolznost.Trebovania" class="form-control" />
                <span asp-validation-for="Dolznost.Trebovania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
