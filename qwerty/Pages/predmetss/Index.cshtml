@page
@model qwerty.Pages.predmetss.IndexModel

@{
    ViewData["Title"] = "Предметы";
}

<h1>Предметы</h1>

<p>
    <a asp-page="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.predmet[0].Naimenovanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.predmet[0].Opisanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.predmet[0].sotrudniki)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.predmet) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naimenovanie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opisanie)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.sotrudniki.First(r => r.ID == item.sotrudnikiID).FIO
                    }
                    catch
                    {
                        <p>нет</p>
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
