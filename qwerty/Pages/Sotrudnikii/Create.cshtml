@page
@model qwerty.Pages.Sotrudnikii.CreateModel

@{
    ViewData["Title"] = "Сотрудник";
}

<h1>Добавить сотрудника</h1>

<h4>Введите данные</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="sotrudniki.FIO" class="control-label"></label>
                <input asp-for="sotrudniki.FIO" class="form-control" />
                <span asp-validation-for="sotrudniki.FIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.Old" class="control-label"></label>
                <input asp-for="sotrudniki.Old" class="form-control" />
                <span asp-validation-for="sotrudniki.Old" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.Pol" class="control-label"></label>
                <input asp-for="sotrudniki.Pol" class="form-control" />
                <span asp-validation-for="sotrudniki.Pol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.Address" class="control-label"></label>
                <input asp-for="sotrudniki.Address" class="form-control" />
                <span asp-validation-for="sotrudniki.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.Pasport" class="control-label"></label>
                <input asp-for="sotrudniki.Pasport" class="form-control" />
                <span asp-validation-for="sotrudniki.Pasport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.Telephone" class="control-label"></label>
                <input asp-for="sotrudniki.Telephone" class="form-control" />
                <span asp-validation-for="sotrudniki.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sotrudniki.DolznostID" class="control-label"></label>
                <input asp-for="sotrudniki.DolznostID" class="form-control" />
                <span asp-validation-for="sotrudniki.DolznostID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
