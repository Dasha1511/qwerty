@page
@model qwerty.Pages.Sotrudnikii.IndexModel

@{
    ViewData["Title"] = "Сотрудники";
}

<h1>Сотрудники</h1>

<p>
    <a asp-page="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].FIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Old)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Pol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Pasport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sotrudniki[0].Dolznost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.sotrudniki) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Old)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pol)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pasport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @{
                    try
                    {
                        @Model.Dolznost.First(r => r.ID == item.DolznostID).Naimenovanie_dolznosti
                    }
                    catch
                    {
                        <p>нет</p>
                    }
                }
                
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Изменить</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Детали</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
